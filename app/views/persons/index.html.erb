<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Summary</th>
    <th></th>
  </tr>
 
  <% @persons.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.summary %></td>
      <td><%= link_to 'Show', person_path(person) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New person', new_person_path %>