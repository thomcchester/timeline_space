<h1> New Person </h1>


<%= form_with scope: :person, url: persons_path, local: true do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </p>
   
    <p>
      <%= form.label :summary%><br>
      <%= form.text_area :summary %>
    </p>
   
    <p>
      <%= form.submit %>
    </p>
  <% end %>

  <%= link_to 'Back', persons_path %>